<!-- views/card.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
  </head>
  <body>
    <header>
      <h1><%= title %></h1>
    </header>
    <section id="content">
      <h2><%= prompt %></h2>
        <p>
          <i><%= typeof hint !== 'undefined' && hint.length > 0 ? 'Hint: ' + hint : '' %></i>
        </p>
    </section>
    <footer>
      <p>An app to help you study</p>
    </footer>
  </body>
</html>